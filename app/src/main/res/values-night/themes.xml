<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopping" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pew</item>
        <item name="colorPrimaryVariant">@color/ebony</item>
        <item name="colorOnPrimary">@color/light_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="floating" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/yellow</item>
    </style>

    <style name="imageSrc" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/white</item>
    </style>


</resources>